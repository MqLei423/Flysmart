// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model airport {
  code        String  @id
  name        String
  lat         Float
  lon         Float
  routesFrom  route[] @relation("From")
  routesTo    route[] @relation("To")
}

model route {
  id           Int       @id @default(autoincrement())
  origin       airport   @relation("From", fields: [originCode], references: [code])
  originCode   String
  destination  airport   @relation("To", fields: [destCode], references: [code])
  destCode     String

  airline      airline   @relation(fields: [airlineCode], references: [code])
  airlineCode  String

  aircraft     aircraft  @relation(fields: [aircraftCode], references: [code])
  aircraftCode String

  lieFlat      Boolean   @default(true)
  frequency    String    @default("Year-round") 
}

model airline {
  code        String  @id
  name        String
  routes      route[]
}

model aircraft {
  code        String  @id
  model       String
  class       String
  routes      route[]
}
